{
    "name": "@arfreelance/monorepo",
    "version": "0.0.0",
    "private": true,
    "description": "Package in experimental stage. Do not use for production.",
    "homepage": "https://github.com/arfreelance/monorepo#readme",
    "bugs": {
        "url": "https://github.com/arfreelance/monorepo/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/arfreelance/monorepo.git"
    },
    "license": "ISC",
    "author": {
        "name": "Lucas Banegas",
        "email": "lucas@argentinafreelance.com"
    },
    "scripts": {
        "prepare": "husky install",
        "test:package": "package-lint **/package.json",
        "test:prettier": "prettier --color --ignore-unknown --loglevel error --no-error-on-unmatched-pattern --write **/*.{css,js,json,md,scss} !**/package.json",
        "test:eslint": "eslint --color --exit-on-fatal-error --fix --no-error-on-unmatched-pattern **/*.js",
        "test:stylelint": "stylelint --allow-empty-input --color --fix **/*.{css,scss}",
        "test:format": "run-p test:package test:prettier",
        "test:lint": "run-p test:eslint test:stylelint",
        "test": "run-s test:format test:lint"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "lint-staged": {
        "*.{css,scss}": [
            "prettier --color --loglevel error --write",
            "stylelint --allow-empty-input --color --fix"
        ],
        "*.js": [
            "prettier --color --loglevel error --write",
            "eslint --color --exit-on-fatal-error --fix"
        ],
        "*.md": [
            "prettier --color --loglevel error --write"
        ],
        "!(package).json": [
            "prettier --color --loglevel error --write"
        ],
        "package.json": [
            "package-lint"
        ]
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "devDependencies": {
        "@arfreelance/eslint-config": "^0.26.0",
        "@arfreelance/eslint-plugin": "^0.26.0",
        "@arfreelance/package-lint": "^0.26.2",
        "@arfreelance/stylelint-config": "^0.26.0",
        "@arfreelance/stylelint-plugin": "^0.26.0",
        "@commitlint/cli": "^17.0.3",
        "@commitlint/config-conventional": "^17.0.3",
        "commitizen": "^4.2.5",
        "cz-conventional-changelog": "^3.3.0",
        "husky": "^8.0.1",
        "lerna": "^5.3.0",
        "lint-staged": "^13.0.3",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.7.1",
        "stylelint": "^14.9.1"
    }
}
