{
    "firestore": {
        "rules": "packages/firestore/firestore.rules",
        "indexes": "packages/firestore/indexes.json"
    },
    "functions": {
        "source": "packages/functions",
        "ignore": [
            ".git",
            "**/.*",
            "**/node_modules/**",
            "firebase-debug.*.log",
            "firebase-debug.log",
            "firebase.json"
        ]
    },
    "hosting": {
        "public": "packages/hosting/public",
        "trailingSlash": false,
        "cleanUrls": true,
        "ignore": [
            ".git",
            "**/.*",
            "**/node_modules/**",
            "firebase-debug.*.log",
            "firebase-debug.log",
            "firebase.json"
        ]
    },
    "remoteconfig": {
        "template": "packages/remoteconfig/template.json"
    },
    "storage": {
        "rules": "packages/storage/storage.rules"
    },
    "emulators": {
        "auth": { "port": 9099 },
        "functions": { "port": 5001 },
        "firestore": { "port": 8080 },
        "hosting": { "port": 5000 },
        "storage": { "port": 9199 },
        "ui": { "enabled": true }
    }
}
